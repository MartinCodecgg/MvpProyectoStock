{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "isolatedModules": true,
        "moduleResolution": "bundler",
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "svelte"
        ],
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "$lib": [
                "./src/lib"
            ],
            "$lib/*": [
                "./src/lib/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte"
    ],
    "exclude": [
        "node_modules"
    ]
}